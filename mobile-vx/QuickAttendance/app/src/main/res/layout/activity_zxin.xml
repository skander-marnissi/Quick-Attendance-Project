<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.pfe.general.quickattendance.ZxinActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/acceuil"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:layout_marginStart="30dp"
        android:layout_marginHorizontal="50dp"
        android:focusable="true"
        app:cardElevation="3dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#ce7539"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/cardViewLogin"
            android:layout_alignTop="@+id/sign_out"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/acceuilT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Menu Principal"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/sign_out"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:layout_marginStart="210dp"
            android:layout_marginHorizontal="50dp"
            android:focusable="true"
            app:cardElevation="3dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#ce7539"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/cardViewLogin"
                android:layout_alignTop="@+id/sign_out"
                android:layout_marginEnd="12dp">

                <TextView
                    android:id="@+id/signO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/sign_out"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        app:cardBackgroundColor="#ce7539"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cardViewCapture" android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/login"
                android:drawableStart="@drawable/ic_photo_camera_black_24dp"
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Scan"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>






</RelativeLayout>